#!/bin/sh

# PROVIDE: wgu
# REQUIRE: FILESYSTEMS

. /etc/rc.subr

name="wgu"

procname="/usr/local/bin/${name}"
desc="${name}"
rcvar="${name}_enable"
pidfile="/var/run/${name}.pid"
command="/usr/sbin/daemon"
command_args="-u _${name} -T ${name} -p ${pidfile} -- ${procname} -auto -config /etc/wgu/wgu.conf -no-timestamps"

load_rc_config $name
run_rc_command "$@"
